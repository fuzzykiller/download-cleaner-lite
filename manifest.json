{
  "manifest_version": 2,

  "name": "Download Cleaner Lite",
  "description": "Automatically removes downloads from history after a set time.",
  "icons": {
    "48": "Icon48.png",
    "64": "Icon64.png"
  },

  "version": "1.1",

  "background": {
    "scripts": ["main.js"]
  },

  "permissions": [
    "downloads",
    "history",
    "storage",
    "alarms"
  ],

  "browser_action": {
    "default_title": "Clear downloads",
    "default_icon": {
      "48": "Icon48.png",
      "64": "Icon64.png"
    }
  },

  "options_ui": {
    "page": "options.html"
  },

  "applications": {
    "gecko": {
      "id": "download-cleaner-lite@futuretech.in"
    }
  }
}
