{
  "name": "download-cleaner-lite",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "tsc",
    "pack": "rm -f download-cleaner-lite.zip && cat files_to_zip.txt | zip -@ download-cleaner-lite.zip",
    "lint": "eslint lib/*.ts *.ts",
    "lint:format": "prettier --check *.ts lib/*.ts *.html *.json",
    "format": "prettier --write *.ts lib/*.ts *.html *.json"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "3.2.4",
    "typescript": "5.3.3",
    "web-ext-types": "3.2.1"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false
  }
}
